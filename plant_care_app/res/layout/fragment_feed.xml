<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/padding_double"
    android:paddingRight="@dimen/padding_double"
    android:background="@color/main_background">

        <com.platncare.app.views.EndlessGridView
                android:id="@+id/endlessListViewPlants"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:paddingTop="@dimen/padding_double"
                android:paddingBottom="@dimen/padding_double"
                android:clipToPadding="false"
                android:numColumns="1"
                android:listSelector="@android:color/transparent"/>
</RelativeLayout>
